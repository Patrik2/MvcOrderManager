@model IEnumerable<OrdersApp.CartItem>

<h2>Cart</h2>

@Html.ActionLink("Back To Products","Index")

@using (Html.BeginForm("CreateOrder", "Products", FormMethod.Post))
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemId)
        </th>
        <th></th>
    </tr>
  @foreach (var item in Model)
  {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  itemID=item.ItemId })
               |
            
            @Html.ActionLink("Remove", "Remove", new { itemID = item.ItemId })
        </td>
    </tr>
  }
</table>
    <input type="submit" value="Submit Order" class="btn btn-primary"  />
}